<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/ailatrieuphu"
    android:orientation="vertical">


    <CheckBox
        android:id="@+id/checkbox_nextquestion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/checkbox_5050"
        android:layout_alignStart="@+id/checkbox_5050"
        android:layout_alignTop="@+id/checkbox_call"
        android:text="@string/checkbox" />


    <CheckBox
        android:id="@+id/checkbox_ask_audience"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="@dimen/activity_play_margin"
        android:layout_marginStart="@dimen/activity_play_margin"
        android:layout_marginTop="@dimen/activity_play_margin"
        android:text="@string/checkbox" />

    <CheckBox
        android:id="@+id/checkbox_5050"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/checkbox_ask_audience"
        android:layout_alignBottom="@+id/checkbox_ask_audience"
        android:layout_toEndOf="@+id/checkbox_ask_audience"
        android:layout_toRightOf="@+id/checkbox_ask_audience"
        android:text="@string/checkbox" />

    <CheckBox
        android:id="@+id/checkbox_call"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/checkbox_ask_audience"
        android:layout_alignStart="@+id/checkbox_ask_audience"
        android:layout_below="@+id/checkbox_ask_audience"
        android:layout_marginTop="@dimen/activity_play_margin"
        android:text="@string/checkbox" />

    <TextView
        android:id="@+id/text_notification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/checkbox_call"
        android:layout_alignStart="@+id/checkbox_call"
        android:layout_below="@+id/checkbox_call"
        android:layout_marginTop="@dimen/activity_play_margin"
        android:text="@string/textview" />

    <TextView
        android:id="@+id/text_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/checkbox_nextquestion"
        android:layout_alignStart="@+id/checkbox_nextquestion"
        android:layout_alignTop="@+id/text_notification"
        android:layout_marginLeft="@dimen/activity_play_margin"
        android:layout_marginStart="@dimen/activity_play_margin"
        android:text="@string/textview" />

    <TextView
        android:id="@+id/text_question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/text_notification"
        android:layout_alignStart="@+id/text_notification"
        android:layout_below="@+id/text_notification"
        android:layout_marginTop="@dimen/activity_play_margin"
        android:text="@string/textview" />

    <TextView
        android:id="@+id/text_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/text_time"
        android:layout_alignStart="@+id/text_time"
        android:layout_alignTop="@+id/text_question"
        android:text="@string/textview" />


    <RadioGroup
        android:id="@+id/radio_group"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/text_question"
        android:layout_marginTop="@dimen/activity_play_margin">

        <RadioButton
            android:id="@+id/radio_answer_a"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/radiobutton" />

        <RadioButton
            android:id="@+id/radio_answer_b"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/radiobutton" />

        <RadioButton
            android:id="@+id/radio_answer_c"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/radiobutton" />

        <RadioButton
            android:id="@+id/radio_answer_d"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/radiobutton" />
    </RadioGroup>

    <Button
        android:id="@+id/button_confirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/activity_play_margin"
        android:layout_marginEnd="@dimen/activity_play_margin"
        android:layout_marginRight="@dimen/activity_play_margin"
        android:layout_toLeftOf="@+id/text_time"
        android:layout_toStartOf="@+id/text_time"
        android:text="@string/button" />

    <Button
        android:id="@+id/button_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/button_confirm"
        android:layout_toEndOf="@+id/text_time"
        android:layout_toRightOf="@+id/text_time"
        android:text="@string/button" />


</RelativeLayout>
